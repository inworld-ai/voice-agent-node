{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
